

<div class="background_wrapper">
  <div class="login_box">
  <div class="logo-img_loginpage">
    <%= image_tag('mizuki_logo.png' , class: 'logo-img') %>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form_box">
      <%= f.text_field :username , placeholder: '　Username' %>
    </div>
    <div class="form_box">
      <%= f.email_field :email, autocomplete: "　email", placeholder: '　Email'  %>
    </div>
    <div class="form_box">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: '　Password' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '　Password' %>
    </div>
    <div class="form_box">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>

</div>
