<% if @like_user == current_user %>
  <%= button_to post_like_path(like, post_id: post.id), method: :delete, id: "like-button", remote: true do %>
    <%= image_tag("arrow-left.svg") %>
    <span>
      <%#= post.likes_count %>
    </span>
  <% end %>
<% else %>
  <%= button_to post_likes_path(@posts), id: "like-button", remote: true do %>
    <%= image_tag("arrow-right.svg") %>
    <span>
      <%#= post.likes_count %>
    </span>
  <% end %>
<% end %>
